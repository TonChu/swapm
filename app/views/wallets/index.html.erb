        <div>
          <span>Balance: </span><strong><%= @wallet.team_wallets.first[:balance] %></strong><br>
          <%= link_to "Transaction details...", wallet_transactions_path(@wallet, role: "t")  %></div>
        <hr>
        </p>
        <a href="#" class="btn btn-primary">Deposit</a>
        <a href="#" class="btn btn-primary">Transfer</a>
        <a href="#" class="btn btn-primary">Withdraw</a>
      </div>
    </div>
  </div>
  <div class="col-md-4 col-lg-4">
    <div class="card" style="width: 20rem;">
