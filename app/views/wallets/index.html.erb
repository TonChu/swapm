        <h5 class="card-title card-title-shadow">Stock Wallet</h5>
        <p class="card-text">
        <div><span>Balance: </span><strong><%= @wallet.stock_wallets.first[:balance] %></strong><br>
          <%= link_to "Transaction details...", wallet_transactions_path(@wallet, role: "s")  %></div>
        <hr>
        </p>
        <a href="#" class="btn btn-primary">Deposit</a>
        <a href="#" class="btn btn-primary">Transfer</a>
        <a href="#" class="btn btn-primary">Withdraw</a>
      </div>
    </div>
  </div>
</div>


