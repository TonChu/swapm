<h3 class="mt-3">Transaction History of <%=@name %></h3>
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th scope="col">Date</th>
    <th scope="col">Amount</th>
    <th scope="col">Type</th>
    <th scope="col">Description</th>

  </tr>
  </thead>
  <tbody>
  <% if !@transactions.nil? && @transactions.length > 0 %>
    <% @transactions.each do |trans| %>
      <tr>
        <th scope="row"><%= trans.created_at %></th>
        <td><%= number_to_currency trans.amount %></td>
        <td><%= trans.transaction_type %></td>
        <td><%= trans.description %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<% if @transactions.nil? || @transactions.length < 1 %>
  <h5 class="mt-5">There is no transaction, please deposit or transfer from another wallet by clicking <%link_to "deposit | transfer", wallet_path(@wallet) %></h5>
<% end %>